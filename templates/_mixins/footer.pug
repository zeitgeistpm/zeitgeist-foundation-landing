mixin footer
    footer.footer.relative(class='pb-16')
        .container.mx-auto.text-dimmer(class='px-[2.8125rem] lg:px-6 lg:text-white')
            .flex.flex-col.border-main.border-t.text-center(class='lg:pt-[3.8125rem] pt-12 xl:flex-row xl:text-left')
                .grow.mb-4
                    h3.font-highlight.font-bold.text-lg.uppercase.text-white General
                    ul.my-4
                        li.inline-block.py-1.px-2(class='xl:list-item xl:px-0')
                            a.underline-offset-2(href='' class='hover:underline') Apps (Advanced UI)
                        li.inline-block.py-1.px-2(class='xl:list-item xl:px-0')
                            a.underline-offset-2(href='' class='hover:underline') Website
                .grow.mb-4
                    h3.font-highlight.font-bold.text-lg.uppercase.text-white Technology
                    ul.my-4
                        li.inline-block.py-1.px-2(class='xl:list-item xl:px-0')
                            a.underline-offset-2(href='' class='hover:underline') Documentation
                        li.inline-block.py-1.px-2(class='xl:list-item xl:px-0')
                            a.underline-offset-2(href='' class='hover:underline') Github
                .grow.mb-4
                    h3.font-highlight.font-bold.text-lg.uppercase.text-white Community
                    ul.my-4
                        li.inline-block.py-1.px-2(class='xl:list-item xl:px-0')
                            a.underline-offset-2(href='' class='hover:underline') Discord
                        li.inline-block.py-1.px-2(class='xl:list-item xl:px-0')
                            a.underline-offset-2(href='' class='hover:underline') Telegram
                        li.inline-block.py-1.px-2(class='xl:list-item xl:px-0')
                            a.underline-offset-2(href='' class='hover:underline') Twitter
                .grow.mb-4.order-first(class='xl:order-last')
                    h3.font-highlight.font-bold.text-lg.uppercase.text-white Stay up to Date
                    .flex.my-6.justify-center(class='xl:justify-start')
                        form(action='/', method='post' class='max-w-[340px] w-full xl:w-auto')
                            input.text-black.block.px-2.w-full.mb-5(type='text' class='h-[2.75rem] rounded-[0.625rem] xl:inline-block xl:mr-4 xl:w-auto xl:mb-0')
                            button.bg-main.w-full(class='xl:w-[2.75rem] h-[2.75rem] xl:rounded-full rounded-[6.25rem]' type='submit')
                                img.hidden(src='images/enter.svg', class='w-[12px] ml-[4px] xl:inline-block')
                                span.block.font-bold.font-highlight.text-white(class='xl:hidden text-[1.5625rem]') Subscribe

            p.my-4.text-center(class='xl:text-left')
                span &copy;
                span= ' ' + (new Date().getFullYear()) + ' '
                span Zeitgeist PM
        div.absolute.bottom-0.left-0.right-0.bg-cover.bg-no-repeat.hidden(class='xl:block h-[370px] -z-50' style='background-image: url(\'images/background-bottom.png\')')
        div.absolute.bottom-0.left-0.right-0.bg-cover.bg-no-repeat(class='xl:hidden lg:h-[370px] h-[190px] -z-50 opacity-50 lg:opacity-100' style='background-image: url(\'images/background-bottom-mobile.png\')')
